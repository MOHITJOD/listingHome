<% layout("/layouts/boilerPlate")%>
<body>
    <h1>Edit here</h1>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation"  enctype="multipart/form-data">
        <br>
    <div>
        <label class="form-label" for="title">Title:</label>
        <input name="listing[title]" type="text" value="<%=listing.title%>" class="form-control" required><br><br>
    </div>
    <div>
        <label class="form-label" for="Currimage">Current Image:</label><br>
        <img src="<%=listing.image.url%>" alt="listed image" name="Currimage">
    </div><br>
        <div>
        <label class="form-label" for="image">New Image Upload:</label>
        <input name="listing[image]" type="file" class="form-control"><br><br>
    </div>
        <div>
        <label class="form-label" for="description">Description:</label>
        <textarea name="listing[description]" class="form-control" required><%=listing.description%> </textarea><br><br>
    </div>
   
        <div>
        <label class="form-label" for="location">Location:</label>
        <input name="listing[location]" type="text" value="<%=listing.location%>" class="form-control" required><br><br>
    </div>
    <div class="row">
    <div class="col-md-4">
        <label class="form-label" for="price">Price:</label>
        <input name="listing[price]" type="text" value="<%= listing.price %>" class="form-control" required><br><br>
    </div>
        <div class="col-md-8">    
        <label class="form-label" for="country">Country:</label>
        <input name="listing[country]" type="text" value="<%=listing.country%>" class="form-control" required><br><br>
    </div>
</div>
        <button class="btn btn-dark">Edit</button>
        <br><br>
</form>

</body>
