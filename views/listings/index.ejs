        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1">
            <%for(let list of allListing){%>
            <div class="col">
                <a href="/listings/<%=list._id%>">
                    <div class="card cardlisting h-100">
                    <img src="<%=list.image.url%>" class="card-img-top" alt="IMAGE" style="height: 20rem; object-fit: cover;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><b><%= list.location%>, <%= list.country%></b></p>
                      <p class="card-text"><%= list.description%></p>
                      <p class="card-text">&#8377;<b><%= list.price.toLocaleString("en-IN")%></b>/Day</p>
                    </div>
                </div></a>
            </div>
